import os
import platform
import sys

DIR = os.path.abspath(os.path.dirname(__file__))
sys.path.insert(0, os.path.join(DIR, '..'))

import tsig

# if you see this:
#   No module named _testcapi
# then you probably need to (re)install python test:
#   sudo yum install python-test

REQUIRED = ['configobj', 'astropy', 'numpy', 'scipy', 'matplotlib', 'psycopg2']
OPTIONAL = ['test', 'test.test_support', 'xml.sax', 'astroquery.vizier']

if __name__ == "__main__":
    print "tsig: %s" % tsig.__version__
    print "python: %s" % platform.python_version()

    for module_name in REQUIRED:
        result = ""
        try:
            module = __import__(module_name)
            result = module.__version__
        except ImportError as e:
            result = str(e)
        except AttributeError as e:
            result = str(e)
        print "%s: %s" % (module_name, result)

    print "optional:"
    for module_name in OPTIONAL:
        result = "ok"
        try:
            module = __import__(module_name)
            result = module.__version__
        except ImportError as e:
            result = str(e)
        except AttributeError as e:
            pass
        print "  %s: %s" % (module_name, result)
